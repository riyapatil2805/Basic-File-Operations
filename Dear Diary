#include <stdio.h>
#include <time.h>

int main() 
{
char diary[1000];
FILE *fptr;

fptr = fopen("DIARY.txt", "a");

time_t now = time(NULL);
struct tm *t = localtime(&now);

fprintf(fptr,"--- Diary Entry ---\n");
fprintf(fptr, "Date: %02d-%02d-%04d\n",t->tm_mday, t->tm_mon + 1, t->tm_year + 1900);

printf("Write your daily log here:\n");
printf("Dear Diary,\n");
fgets(diary, sizeof(diary), stdin);
fprintf(fptr, "%s\n", diary);
fclose(fptr);

printf("Diary entry saved!\n");
return 0;
}

void writeentry()
{
char diary[1000];

FILE*fptr;
fptr=fopen("DIARY.txt", "a");
fprintf(fptr, "\n--- Diary Entry ---\n");
printf("Write your daily log here:\n");
printf("Dear Diary,\n");
scanf("%s",&diary);
fgets(diary,sizeof(diary),stdin);
fprintf(fptr, "%s", diary);
fclose(fptr);
printf("Entry saved successfully!\n");
}
